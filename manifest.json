{
  "manifest_version": 3,
  "name": "Table Extractor AI",
  "version": "1.0.0",
  "description": "ดึงโครงสร้างตารางจากแหล่งข้อมูลต่างๆ พร้อมเครื่องมือ AI ในการเติมข้อมูล",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "downloads",
    "clipboardWrite",
    "clipboardRead",
    "contextMenus"
  ],
  "host_permissions": [
    "https://api.openai.com/*",
    "https://api.anthropic.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://www.notion.so/*",
    "https://airtable.com/*",
    "*://*/*"
  ],
  "background": {
    "service_worker": "src/background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.js"],
      "css": ["assets/css/content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Table Extractor AI",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "options_page": "src/options/options.html",
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "src/*"],
      "matches": ["<all_urls>"]
    }
  ]
}

